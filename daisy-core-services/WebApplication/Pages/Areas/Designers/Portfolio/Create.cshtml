@page
@model WebApplication.Pages.Areas.Designers.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Portfolio</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Portfolio.IsActive" /> @Html.DisplayNameFor(model => model.Portfolio.IsActive)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Portfolio.Biography" class="control-label"></label>
                <input asp-for="Portfolio.Biography" class="form-control" />
                <span asp-validation-for="Portfolio.Biography" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Portfolio.CreatedAt" class="control-label"></label>
                <input asp-for="Portfolio.CreatedAt" class="form-control" />
                <span asp-validation-for="Portfolio.CreatedAt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Portfolio.UpdatedAt" class="control-label"></label>
                <input asp-for="Portfolio.UpdatedAt" class="form-control" />
                <span asp-validation-for="Portfolio.UpdatedAt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Portfolio.DeletedAt" class="control-label"></label>
                <input asp-for="Portfolio.DeletedAt" class="form-control" />
                <span asp-validation-for="Portfolio.DeletedAt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Portfolio.ObjectId" class="control-label"></label>
                <input asp-for="Portfolio.ObjectId" class="form-control" />
                <span asp-validation-for="Portfolio.ObjectId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
