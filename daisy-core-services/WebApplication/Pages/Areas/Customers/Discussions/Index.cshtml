@page
@model WebApplication.Pages.Areas.Customers.Discussions.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Discussion</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Discussion[0].Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Discussion[0].Content)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Discussion[0].Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Discussion[0].CreatedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Discussion[0].UpdatedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Discussion[0].DeletedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Discussion[0].ObjectId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Discussion) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Content)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpdatedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DeletedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ObjectId)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
