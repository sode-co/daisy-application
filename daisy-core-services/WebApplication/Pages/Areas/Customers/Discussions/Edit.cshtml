@page
@model WebApplication.Pages.Areas.Customers.Discussions.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Discussion</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Discussion.Type" class="control-label"></label>
                <input asp-for="Discussion.Type" class="form-control" />
                <span asp-validation-for="Discussion.Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Discussion.Content" class="control-label"></label>
                <input asp-for="Discussion.Content" class="form-control" />
                <span asp-validation-for="Discussion.Content" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Discussion.Id" />
            <input type="hidden" asp-for="Discussion.Status" />
            <input type="hidden" asp-for="Discussion.CreatedAt" />
            <input type="hidden" asp-for="Discussion.UpdatedAt" />
            <input type="hidden" asp-for="Discussion.DeletedAt" />
            <input type="hidden" asp-for="Discussion.ObjectId" />
            <div class="form-group">
                <input type="hidden" asp-for="Workspace.Id" />
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
